# cogmem-kos Configuration
# Copy this file to .env and fill in your values

# Mode: "enterprise" or "solo"
KOS_MODE=enterprise

# Postgres (admin/run logs/outbox)
POSTGRES_DSN=postgresql+asyncpg://user:password@localhost:5432/cogmem_kos

# OpenSearch (text search + highlighting + facets)
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_VERIFY_CERTS=false

# Neo4j (entity graph + provenance)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Qdrant (embeddings + semantic recall)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# SurrealDB (solo mode only)
SURREALDB_URL=ws://localhost:8000/rpc
SURREALDB_NAMESPACE=cogmem
SURREALDB_DATABASE=kos
SURREALDB_USER=root
SURREALDB_PASSWORD=root

# LLM Gateway (via LiteLLM)
LITELLM_API_BASE=http://localhost:4000
LITELLM_API_KEY=
LITELLM_DEFAULT_MODEL=gpt-4o-mini

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging
LOG_LEVEL=INFO
